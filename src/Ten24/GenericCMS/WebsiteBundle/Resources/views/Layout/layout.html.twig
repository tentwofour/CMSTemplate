<!doctype html>
{% set htmlLocale = app.request.locale|default(defaultlocale)|slice(0,2) %}
<!--[if lt IE 7]>       <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="{{ htmlLocale }}"> <![endif]-->
<!--[if IE 7]>          <html class="no-js lt-ie9 lt-ie8" lang="{{ htmlLocale }}">        <![endif]-->
<!--[if IE 8]>          <html class="no-js lt-ie9" lang="{{ htmlLocale }}">               <![endif]-->
<!--[if gt IE 8]><!-->  <html class="no-js" lang="{{ htmlLocale }}">                  <!--<![endif]-->
<head>  
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ websitetitle | trans }}{% block title %}{% if page is defined and nodemenu.getActiveForDepth(2) is not null %} - {{ get_title_for(page) }}{% endif %}{% endblock %}</title>
    {% if page is defined %}
        {{ render_seo_metadata_for(page) }}
    {% endif %}

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('apple-touch-icon-144x144-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="{{ asset('apple-touch-icon-120x120-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('apple-touch-icon-114x114-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('apple-touch-icon-72x72-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('apple-touch-icon-precomposed.png') }}">
    <link rel="stylesheet" type="text/css" media="screen" href="http://fonts.googleapis.com/css?family=Raleway:100|Open+Sans:300,300italic,400, 400italic,600,600italic,700&amp;subset=latin,latin-ext" />

    {% include 'Ten24ThriveDesignWebsiteBundle:Layout:_css.html.twig' %}
    {% include 'Ten24ThriveDesignWebsiteBundle:Layout:_js_header.html.twig' %}
</head>
<body {% block extra_body_attributes %}{% endblock %}>

{% include 'Ten24ThriveDesignWebsiteBundle:Layout:_googletagmanager.html.twig' %}

{% block header %}

    <!--[if lte IE 9]>
    <div class="outdated">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="outdated__title">You are using an outdated browser.</h1>
                    <h3 class="outdated__subtitle">Some content may be lost or not displayed correctly.</h3>
                    <p class="outdated__description">Please consider upgrading to a more recent browser.</p>
                    <a href="http://browsehappy.com/?locale={{ htmlLocale }}" target="_blank" class="outdated__link">Upgrade your browser</a>
                </div>
            </div>
        </div>
    </div>
    <![endif]-->

    <header>
        <div class="contact container">
            <div class="row">
                <div class="col-xs-7 col-sm-9 col-lg-10 col-lg-10">
                    <div class="contact-details">
                        <h6><span>Contact</span> Thrive</h6>
                        <p>P: <a href="tel:13065399956">306.539.9946</a></p>
                        <p>E: <a href="mailto:alicia@thrivedesign.ca">alicia@thrivedesign.ca</a></p>
                    </div>
                </div>
                
                <div class="col-xs-5 col-sm-3 col-md-2 col-lg-2">
                    <div class="social">
                        <a href="http://www.facebook.com/pages/Regina-SK/Thrive-Landscape-Design/136316818545" class="fb" target="_blank">
                            <span>Thrive Design on Facebook</span>
                            <i></i>
                        </a>
                        <a href="http://twitter.com/aliciathrive" class="tw" target="_blank">
                            <span>Thrive Design on Twitter</span>
                            <i></i>
                        </a>
                        <a href="https://www.youtube.com/user/Thrivedesign1" class="yt" target="_blank">
                            <span>Thrive Design on YouTube</span>
                            <i></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <nav class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="navbar-header">
                            {% if nodemenu is defined %}
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-navigation">
                                <span>
                                    <span class="icon">
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </span>
                                </span>
                            </button>
                        
                            <h1>
                                {% set homepagePageNode = nodemenu.getNodeByInternalName('homepage') %}
                                <a href="{{ path('_slug', { 'url': homepagePageNode.slug }) }}">
                                {% endif %}
                                    <img alt="Fadadance" src="{{ asset('bundles/ten24thrivedesignwebsite/img/thrive-logo.png') }}" />
                                {% if nodemenu is defined %}
                                </a>
                            </h1>
                            {% endif %}
                        </div>
                    </div>
                    
                    {% if nodemenu is defined %}
                    <div class="col-sm-7">
                        <div class="collapse navbar-collapse" id="main-navigation">
                            <ul class="nav navbar-nav">
                                {% set activeSubnode = nodemenu.getActiveForDepth(1) %}
                                {% include 'Ten24ThriveDesignWebsiteBundle:Layout:submenu.html.twig' with { items: activeSubnode.children } %} 
                            </ul>
                        </div>        
                    </div>
                    {% endif %}
                </div>
            </div>
        </nav>
    </header>
{% endblock %}

<main role="main">
    <div class="container">
        <div class="inner">
            <div class="content">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
</main>

{% if block('content_footer') %}
<section class="content-footer">
    <div class="container">
        <div class="row">
            {% block content_footer %}{% endblock %}
        </div>
    </div>
</section>
{% endif %}

{% block footer %}
    <footer role="footer" class="footer">
        <div class="container">
            <div class="row">
                <div class="attribution col-xs-12">
                    <p>&copy {{ "now"|date('Y') }} Thrive Landscape Design</p>
                    <p>Site by <a href="http://my-studio.ca" target="_blank" title="My Studio">My Studio</a> &amp; <a href="http://tentwentyfour.ca" target="_blank">TenTwentyFour</a></p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}

{% include 'Ten24ThriveDesignWebsiteBundle:Layout:_js_footer.html.twig' %}

</body>
</html>
