{% set handler = mediamanager.getHandler(media) %}
{% set helper = handler.getFormHelper(media) %}
<div class="video-pp">
    <div>
    {% if helper.type == 'youtube' %}
        <iframe width="560" height="315" src="http://www.youtube.com/embed/{{ helper.code }}{{embedParams is defined ? embedParams }}" frameborder="0" allowfullscreen></iframe>
    {% elseif helper.type == 'vimeo' %}
        <iframe src="http://player.vimeo.com/video/{{ helper.code }}{{embedParams is defined ? embedParams }}" width="500" height="290" frameborder="0"></iframe>
    {% elseif helper.type == 'dailymotion' %}
        <iframe frameborder="0" width="480" height="270" src="http://www.dailymotion.com/embed/video/{{ helper.code }}{{embedParams is defined ? embedParams }}"></iframe>
    {% endif %}
    </div>
</div>